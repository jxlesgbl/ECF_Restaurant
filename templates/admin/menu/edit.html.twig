{% extends "base.html.twig" %}

{% block title %}Modification du menu{% endblock %}

{% block javascripts %}

{{ parent() }}
<script src="{{asset('assets/admin/js/prototype-widget.js')}}"></script>
{% endblock %}

{% block content %}
    <h1>Nouveau menu</h1>

    {{ form_start(form) }}
        {{ form_label(form.name, "Titre du menu") }}
        {{ form_widget(form.name) }}
        {{ form_label(form.description, "Entrez la description du menu") }}
        {{ form_widget(form.description) }}
        {{ form_label(form.price, "Entrez le prix du menu") }}
        {{ form_widget(form.price) }}
        {{ form_label(form.image, "Illustration du plat") }}
        {{ form_widget(form.image) }}
        <input type="hidden" name="id" value="{{ menu.id }}" />
        {% include 'admin/menu/formula.html.twig' with { 'formulas' : form.formulas } %}

        {{form_widget(form._token)}}

    {{ form_widget(form.submit, { 'attr': { 'class': 'btn btn-primary' } }) }}

    {{ form_end(form, {'render_rest': false}) }}

{% endblock %}