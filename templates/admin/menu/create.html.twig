{% extends "base.html.twig" %}

{% block title %}Nouveau Menu{% endblock %}

{% block javascripts %}

{{ parent() }}
<script src="{{asset('assets/admin/js/prototype-widget.js')}}"></script>
{% endblock %}

{% block content %}
    <h1>Nouveau menu</h1>

    {{ form_start(form) }}
        {{ form_label(form.name, "Titre du menu", {'attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        {{ form_label(form.description, "Entrez la description du menu", {'attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        {{ form_label(form.price, "Entrez le prix du menu", {'attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
        {{ form_label(form.image, "Illustration du plat", {'attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
        {% include 'admin/menu/formula.html.twig' with { 'formulas' : form.formulas } %}

        {{form_widget(form._token)}}

    {{ form_widget(form.submit, { 'attr': { 'class': 'btn btn-primary' } }) }}

    {{ form_end(form, {'render_rest': false}) }}

{% endblock %}